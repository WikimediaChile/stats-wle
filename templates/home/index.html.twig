{% extends 'base.html.twig' %}

{% block title %}Estadísticas WLE Chile{% endblock %}

{% block body %}

  <nav class="level">
    <div class="level-item has-text-centered">
      <div>
        <p class="title">{{ total.dias }}</p>
        <p class="heading">Días</p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="title">{{ total.archivos }}</p>
        <p class="heading">Fotos</p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="title">{{ total.usuarios }}</p>
        <p class="heading">Participantes</p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="title">{{ edad.nuevos }} <small style="color: gray">/ {{ edad.viejos }}</small></p>
        <p class="heading">Recién registrados / antiguos</p>
      </div>
    </div>
  </nav>
  <div class="columns">
    <div class="column">
      <table class="table is-narrow">
        <thead>
          <tr>
            <th>Día</th>
            <th>Fotos</th>
            <th>Usuarios</th>
          </tr>
        </thead>
        <tbody>
          {% for foto in fotos %}
            <tr>
              <td><a href="{{ path('day', {'date': foto.fecha }) }}">{{ foto.fecha | date('d-m-Y')}}</a></td>
              <td class="has-text-right">{{ foto.archivos }}</td>
              <td class="has-text-right">{{ foto.usuarios}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="column">
      <table class="table is-narrow">
        <thead>
          <tr>
            <th>Usuario</th>
            <th>Fotos</th>
          </tr>
        </thead>
        <tbody>
          {% for archivos, usuario in usuarios %}
            <tr>
              <td>
                {% for usu in usuario %}
                  <a href="{{ path('user', {'name': usu})  }}">{{ usu }}</a>
                  -
                {% endfor %}
              </td>
              <td class="has-text-right">{{ archivos }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
